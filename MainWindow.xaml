<Window x:Class="ProgrammingLanguage2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgrammingLanguage2024"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="450" MinWidth="700px">
    <Grid Margin="0px">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="200px" MinWidth="170px"/>
            <ColumnDefinition MinWidth="500px" MaxWidth="1920 px"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" SelectionChanged="sidebar_SelectionChanged" x:Name="sidebar" Background="Black" SelectionMode="Single" Padding="15px" Grid.ColumnSpan="2">
            <local:NavButton Navlink="/Pages/Newtone.xaml" TextOfButton ="Метод Ньютона"/>
        </ListBox>
        
        <Frame Grid.Column="1" x:Name="navframe" NavigationUIVisibility="Hidden" Background="#e9ecef"/>
    </Grid>
</Window>
